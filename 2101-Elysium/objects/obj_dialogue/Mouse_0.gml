var _len = string_length(text[text_current]);

//set currently drawn char to last char in string so whole sentence displays
if (char_current < _len) {
	char_current = _len;
}

//if whole string already displayed, advance to next string
else {
	text_current += 1;
	if(text_current > text_last) {
		room_restart();
	}
	else {
		text[text_current] = string_wrap(text[text_current], text_width);
		char_current = 0;
	}
}

